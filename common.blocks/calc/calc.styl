// 16px = 1rem
remify(value) {
    u = unit(value);

    if (u is 'px') {
        return unit(value/16, 'rem');
    } else {
        return unit(value, u);
    }
}

int_font_size    = unit(font_size, '');
line_height      = 20 / int_font_size;
rem_font_size    = remify(font_size);
rem_line_height  = remify(unit(floor(line_height * int_font_size), 'px'));
