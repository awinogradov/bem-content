block('paragraph')(

    tag()('p'),

    def()(function() {
        if(this.ctx.mark) {
            applyCtx({
                block : this.block,
                mods : { mark : true },
                content : [
                    { elem : 'marker', content : this.ctx.mark },
                    this.ctx.content
                ]
            });
        } else applyNext();
    }),

    elem('marker').tag()('span')
);
